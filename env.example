# Backblaze B2 Configuration (Required)
B2_APPLICATION_KEY_ID=your_key_id_here
B2_APPLICATION_KEY=your_application_key_here
B2_BUCKET_NAME=your-bucket-name

# Backup Configuration (Optional - defaults shown)
B2_PREFIX=docs
SITE_DIR=docs

# Git Configuration (Optional - for GitHub Pages deployment)
GIT_REMOTE=origin
GIT_BRANCH=main

# Authentication (Optional - for securing Flask endpoints)
ADMIN_TOKEN=your_secure_token_here

# Email Alerts Configuration (Optional - for monitoring alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@yourdomain.com

# Monitoring Configuration (Optional)
BACKUP_CHECK_INTERVAL_HOURS=24
MAX_BACKUP_AGE_HOURS=48
